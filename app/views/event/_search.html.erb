<div class = "seeker">
	<div class = "title-seeker text-center">
		<h4> Buscador por Evento</h4>
	</div>

	<div class="form-group form-seeker">

		<%=form_tag event_show_path, method: :post do%>

			<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
					<div class="col-sm-1 text-center">
					 	<h4>id:</h4>
					</div>

					<div class="col-sm-10">			
						<%= text_field_tag 'event_id', nil, placeholder: 'Ingresa el id del evento..', required: true, class: "form-control", onkeypress: "return isNumberKey(event)"%>
					</div>				
				</div>
			</div>	
			<br>
			<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				 	<%=submit_tag("Buscar", class: "btn btn-block")  %>
				</div>
			</div>
		<%end%>

	</div>
</div>