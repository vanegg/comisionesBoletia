<div class="user-group">	

	<% if @status%>
		<div class= "event-data">
		<p>Usuario encontrado N° <%= @user.id%></p>
		<p>Usuario: <%= @user.name %></p>
		<p>email:<%= @user.email %></p>
		</div>
		<div class = "event-buttons">
		<% if @user.hasCommission %>
			<%= link_to "Eliminar comisión personalizada", 
      { controller: 'commission', action: 'destroy', id: @user.commission.id }, data:
      { confirm: "¿Estás seguro de eliminar la comisión personalizada?", 
      	method: :delete, remote: false} %>
		<%else%>
			<button type='button' id='customize' class='btn btn-cstm'>Personalizar comisión</button>
			<%= render 'commission/custom_form',
			object: @type = '2' %>

		<%end%>
		</div>
     <div class= "events-user">  
   <h3>Eventos que ha organizado este usuario:</h3>
   <table class="table">
    <thead>
      <tr>
        <th>#ID</th>
        <th>Nombre</th>
        <th>Mas detalles</th>
        <th></th>
      </tr>
    </thead>
    <% if @user.events.length <= 0 %>
      </table>
      <h5>¡Ups! Aún no tiene eventos organizados</h5>  
    <% else %>
      <tbody>
        <% @user.events.each do |event| %>
          <tr>
            <td><%=event.id%></td>
            <td><%=event.name%></td>
            <td><%=link_to 'Detalles',event_path(event) %></td>
            <td><button type='button' id='btn-simulate' class='btn btn-cstm'><%=link_to "Simular compra", new_booking_path(event: event.id) %></button></td>
          </tr>
        <% end %>
      </tbody>
      </table>
    <% end %> 
</div>
<%else%>
     <div class="user-no-found">
       <div class="row">
         <div class="col-sm-12">
           <h4>El usuario que indicaste no pudo ser encontrado. Por favor, intenta otra vez.</h4>
         </div>
         <div class="col-sm-9">  
           <%= render partial: 'user/search'%>            
         </div>
      </div>
     </div>
   <%end%>
   <button type='button' id='btn-return' class='btn btn-cstm'><%=link_to "Regresar a Inicio", root_path %></button>
 </div>
